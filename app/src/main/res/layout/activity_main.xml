<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.x16109139.alexsantosca.MainActivity">


    <Button
        android:text="Divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDivide"
        android:padding="10dp"
        android:textSize="10sp"
        android:layout_marginTop="30dp"
        android:layout_above="@+id/Result"
        android:layout_alignLeft="@+id/buttonSubtract"
        android:layout_alignStart="@+id/buttonSubtract" />

    <Button
        android:text="Multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/buttonMultiply"
        android:padding="10dp"
        android:textSize="10sp"
        android:layout_below="@+id/buttonAdd"
        android:layout_alignLeft="@+id/buttonAdd"
        android:layout_alignStart="@+id/buttonAdd" />

    <Button
        android:text="Subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSubtract"
        android:padding="10dp"
        android:textSize="10sp"
        android:layout_alignTop="@+id/buttonAdd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/Result"
        android:background="@android:color/holo_blue_bright"
        android:textSize="18sp"
        android:layout_below="@+id/buttonMultiply"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonDivide"
        android:textAlignment="center"
        android:padding="8dp"
        android:layout_alignEnd="@+id/buttonDivide" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter first number"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/editTextFirst"
        android:textSize="20sp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/textViewTop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter second number"
        android:ems="10"
        android:textSize="20sp"
        android:layout_marginTop="23dp"
        android:id="@+id/editTextSecond"
        android:layout_below="@+id/editTextFirst"
        android:layout_alignLeft="@+id/editTextFirst"
        android:layout_alignStart="@+id/editTextFirst"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAdd"
        android:padding="10dp"
        android:textSize="12sp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/editTextSecond"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/TextViewMaximum"
        android:padding="@dimen/activity_vertical_margin"
        android:textSize="14sp"
        android:background="@color/colorAccent"
        android:textAlignment="center"
        tools:padding="8dp"
        android:layout_below="@+id/Result"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CA1 Feb 2007!"
        android:id="@+id/textViewTop"
        android:layout_marginTop="24dp"
        android:background="@android:color/black"
        android:textColor="@android:color/background_light"
        android:padding="5dp"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
